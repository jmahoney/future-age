<% @items.each do |item| %>
  <article>
    <div>
      <% if item.title.present? %>
        <a href="<%= item.url %>" target="_blank">
          <h2 class="post-title">
            <%= item.title %>
          </h2>
        </a>
      <% end %>

      <% if item.content_html.present? %>
        <%= item.content_html.html_safe %>
      <% end %>

      <p class="post-meta">
        Posted
        <% if item.feed.name.present? %>
          to
          <% if item.feed.website_url.present? %>
            <a href="<%= item.feed.website_url %>" target="_blank"><%= item.feed.name %></a>
          <% else %>
            <%= item.feed.name %>
          <% end %>
        <% end %>
        <a href="<%= item.url %>" target="_blank"><%= time_ago_in_words(item.date_published) %></a>
      </p>
    </div>
  </article>
  <hr>
<% end %>
